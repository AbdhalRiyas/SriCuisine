import 'package:flutter/material.dart';

class CaloriePage extends StatefulWidget {
  @override
  _CaloriePageState createState() => _CaloriePageState();
}

class _CaloriePageState extends State<CaloriePage> {
  
  List<Recipe> recommendedRecipes = [
    Recipe(name: 'Grilled Chicken Salad', calories: 300),
    Recipe(name: 'Vegetable Stir Fry', calories: 250),
    // Add more recipes as needed
  ];

  // Function to filter recipes based on calorie limit
  List<Recipe> filterRecipes(int calorieLimit) {
    return recommendedRecipes.where((recipe) => recipe.calories <= calorieLimit).toList();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Calorie Page'),
      ),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(
              'Set your daily calorie limit:',
              style: TextStyle(fontSize: 18),
            ),
            SizedBox(height: 10),
            // Input field for calorie limit
            TextField(
              keyboardType: TextInputType.number,
              decoration: InputDecoration(
                labelText: 'Calorie Limit',
              ),
              onSubmitted: (String value) {
                int calorieLimit = int.tryParse(value) ?? 0;
                List<Recipe> filteredRecipes = filterRecipes(calorieLimit);
                // TODO: Update UI with filtered recipes
              },
            ),
            SizedBox(height: 20),
            // Display filtered recipes
            Text(
              'Recommended Recipes:',
              style: TextStyle(fontSize: 18),
            ),
            SizedBox(height: 10),
            // TODO: Display filtered recipes here
          ],
        ),
      ),
    );
  }
}

class Recipe {
  final String name;
  final int calories;

  Recipe({required this.name, required this.calories});
}

void main() {
  runApp(MaterialApp(
    home: CaloriePage(),
  ));
}